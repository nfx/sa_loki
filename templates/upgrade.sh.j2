#!/bin/bash

LOKI_VERSION="{{ loki_version }}"
cd {{ loki_base_dir }}

rm loki-linux-{{ loki_architecture }}.zip || true
wget  https://github.com/grafana/loki/releases/download/${LOKI_VERSION}/loki-linux-{{ loki_architecture }}.zip

sudo service loki stop
unzip loki-linux-{{ loki_architecture }}.zip
sudo chown -R {{ loki_user }}:root {{ loki_base_dir }}/loki-linux-{{ loki_architecture }}
sudo chmod +x {{ loki_base_dir }}/loki-linux-{{ loki_architecture }}
#             Source                                  Link
sudo ln -f -s {{ loki_base_dir }}/loki-linux-{{ loki_architecture }} {{ loki_base_dir }}/loki
sudo service loki start

# logcli
rm logcli-linux-{{ loki_architecture }}.zip || true
wget  https://github.com/grafana/loki/releases/download/v${LOKI_VERSION}/logcli-linux-{{ loki_architecture }}.zip
unzip logcli-linux-{{ loki_architecture }}.zip
sudo ln -f -s {{ loki_base_dir }}/logcli-linux-{{ loki_architecture }} {{ loki_base_dir }}/logcli

# promtail
rm promtail-linux-{{ loki_architecture }}.zip || true
wget  https://github.com/grafana/loki/releases/download/v${LOKI_VERSION}/promtail-linux-{{ loki_architecture }}.zip
unzip promtail-linux-{{ loki_architecture }}.zip
sudo ln -f -s {{ loki_base_dir }}/promtail-linux-{{ loki_architecture }} {{ loki_base_dir }}/promtail
